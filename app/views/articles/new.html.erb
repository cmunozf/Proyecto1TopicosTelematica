<!DOCTYPE html>
<html>
<head>
	<%= stylesheet_link_tag "articles.scss" %>
    <form method="get" action="/">
    <button class="submit" type="submit">Atras</button>
    </form>
    <meta charset="utf-8">
</head>
<body>
	<center><form class="contact_form" action="/articles" method="post" name="contact_form">
		<ul>
		<li>
			<h2>Agregar Libro</h2>
		</li>
		<%= form_for(@article) do |f| %>
		<% @article.errors.full_messages.each do |message| %>
		<div class="be-red white">
			* <%= message%>
		</div>
		<%end%>
		<li>
			<label for="nombre">Nombre:</label>
			<div class ="field">
				<%= f.text_field :nombre, placeholder: "Cien años de soledad" %>
			</div>
		</li>
		<li>
			<label for="isbn">ISBN:</label>
			<div class ="field">
				<%= f.text_field :isbn, placeholder: "9789631420494" %>
			</div>
		</li>
		<li>
			<label for="isbn">Autor:</label>
			<div class ="field">
				<%= f.text_field :autor, placeholder: "Gabriel García Márquez" %>
			</div>
		</li>
		<li>
			<label for="isbn">Fecha Publicacion:</label>
			<div class ="field">
				<%= f.text_field :fecha, placeholder: "1967" %>
			</div>
		</li>
		<li>
			<label for="isbn">Editorial:</label>
			<div class ="field">
				<%= f.text_field :editorial, placeholder: "Harper, Jonathan Cape" %>
			</div>
		</li>
		<div>
			<li> 
				<%= button_tag(type: 'submit', class: "submit") do %>Agregar
				<% end %>
			</li>
		</div>
		<%end%>
	</li>
</ul>
</form></center>
</body>
</html>